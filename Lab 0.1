try:
    choice = int(input("Выбери номер задачи(1 или 2) или отрицательное число для выхода:"))
except ValueError:
    print("error")
if choice == 1:
    print("Первое задание")
elif choice == 2:
    print("Второе задание")
elif type(choice) != type(int):
    print("Это не число")
else:
    print("Число находится вне диапазона")
